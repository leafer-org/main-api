{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "root": true,
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":NODE:", ":PACKAGE:", ":BLANK_LINE:", ":PATH:"]
          }
        }
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!commitlint.config.js", "!!**/protobuf", "!!**/generated"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "assist": {
      "enabled": true
    },
    "formatter": {
      "indentStyle": "space",
      "lineWidth": 100,
      "quoteStyle": "single"
    },
    "parser": {
      "jsxEverywhere": false,
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "assist": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 50
          }
        },
        "noExcessiveLinesPerFunction": "off",
        "noImplicitCoercions": "error",
        "noUselessStringConcat": "error",
        "noStaticOnlyClass": "off"
      },
      "correctness": {
        "noGlobalDirnameFilename": "error",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": {
          "level": "error",
          "options": {
            "forceJsExtensions": true
          }
        },
        "useJsonImportAttributes": "error"
      },
      "nursery": {
        "noEqualsToNull": "error",
        "noFloatingPromises": "error",
        "noMisusedPromises": "error",
        "noMultiStr": "error",
        "noParametersOnlyUsedInRecursion": "error",
        "noShadow": "error",
        "noUnnecessaryConditions": "error",
        "noUnresolvedImports": "off",
        "noUselessCatchBinding": "error",
        "noUselessUndefined": "error",
        "useArraySortCompare": "error",
        "useConsistentArrowReturn": "error",
        "useExhaustiveSwitchCases": "error",
        "useExplicitType": "off",
        "useFind": "error"
      },
      "performance": {
        "noAccumulatingSpread": "error",
        "noAwaitInLoops": "error",
        "noBarrelFile": "off",
        "noDelete": "error"
      },
      "recommended": true,
      "security": {
        "noSecrets": {
          "level": "error",
          "options": {
            "entropyThreshold": 100
          }
        }
      },
      "style": {
        "noCommonJs": "error",
        "noDefaultExport": "off",
        "noDoneCallback": "error",
        "noInferrableTypes": "error",
        "noMagicNumbers": "off",
        "noNegationElse": "error",
        "noParameterAssign": "error",
        "noShoutyConstants": "error",
        "noSubstr": "error",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "error",
        "noYodaExpression": "error",
        "useAtIndex": "error",
        "useBlockStatements": "off",
        "useConsistentArrayType": "error",
        "useConsistentBuiltinInstantiation": "error",
        "useConsistentMemberAccessibility": {
          "level": "error",
          "options": {
            "accessibility": "explicit"
          }
        },
        "useConsistentObjectDefinitions": "error",
        "useDefaultParameterLast": "error",
        "useDefaultSwitchClause": "error",
        "useEnumInitializers": "error",
        "useExplicitLengthCheck": "error",
        "useImportType": "off",
        "useLiteralEnumMembers": "error",
        "useObjectSpread": "error",
        "useReadonlyClassProperties": "error",
        "useShorthandAssign": "error",
        "useShorthandFunctionType": "error",
        "useSymbolDescription": "error",
        "useTemplate": "error",
        "useThrowNewError": "error",
        "useThrowOnlyError": "error"
      },
      "suspicious": {
        "noApproximativeNumericConstant": "error",
        "noArrayIndexKey": "error",
        "noAsyncPromiseExecutor": "error",
        "noCatchAssign": "error",
        "noClassAssign": "error",
        "noEvolvingTypes": "error"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  }
}
