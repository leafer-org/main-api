{
  "name": "main-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "serve": "node dist/apps/main.js",
    "dev": "concurrently \"swc src -w -s --copy-files -d dist --strip-leading-paths\" \"node --watch dist/apps/main.js\"",
    "build": "swc src -d dist --strip-leading-paths --copy-files",
    "lint:fix": "biome check src --write",
    "lint:check": "biome check src",
    "lint:types": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --passWithNoTests --reporter=default",
    "test:cov": "vitest run --passWithNoTests --reporter=default --coverage.enabled --coverage.reporter=cobertura",
    "openapi-bundle": "npx @redocly/cli bundle ../http-contracts/main.yaml --output ./src/infra/contracts/generated-public-schema.json --ext json",
    "openapi-gen": "npx openapi-typescript ./src/infra/contracts/generated-public-schema.json -o ./src/infra/contracts/generated-public-schema.d.ts && biome format --write ./src/infra/contracts/generated-public-schema.d.ts",
    "openapi": "yarn openapi-bundle && yarn openapi-gen"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.775.0",
    "@aws-sdk/s3-request-presigner": "^3.775.0",
    "@dotenvx/dotenvx": "^1.52.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@trpc/server": "^11.9.0",
    "argon2": "^0.43.0",
    "cookie": "^1.0.2",
    "drizzle-orm": "^0.45.1",
    "express-openapi-validator": "^5.6.2",
    "node-rdkafka": "^3.6.1",
    "p-limit": "^7.3.0",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typebox": "^1.0.81",
    "vitest": "^4.0.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@nestjs/testing": "^11.0.1",
    "@redocly/cli": "^2.16.0",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/cookie": "^0.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "globals": "^16.0.0",
    "openapi-typescript": "^7.10.1",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.9"
  },
  "packageManager": "yarn@4.12.0"
}
